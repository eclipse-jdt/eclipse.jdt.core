		</build>
		<properties>
			<tycho.surefire.argLine>--add-modules ALL-SYSTEM -Dcompliance=1.4,1.7,1.8,15,18</tycho.surefire.argLine>
		</properties>
	</profile>
	<profile>
		<id>test-on-javase-19</id>
